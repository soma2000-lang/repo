    "dependencies": {
        "@sap-cloud-sdk/resilience": "^3.9.0",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
        "@sap/xsenv": "^3.2.0",
