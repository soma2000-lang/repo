        "install": "^0.13.0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "undeploy": "cf undeploy Time --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "db":"sql",
            "auth": {
                "[development]": {
                    "strategy": "mock",
                    "users":{
                        "100135":{
                            "roles":[
                                "authenticated-user"
                            ],
                            "tenant":"t1"
                        },
                        "sfadmin":{
                            "roles":["authenticated-user"],
                            "tenant":"t2"
                        }
                        
                    }
                },
                "ECEmploymentInformation": {
                    "kind": "odata-v2",
                    "model": "srv/external/ECEmploymentInformation",
                    "credentials": {
                        "[production]": {
                            "destination": "extensionapplication-sf-api",
                            "path": "odata/v2"
                        },
                        "[development]": {
                            "url": "",
                            "authentication": "BasicAuthentication",
                            "path": "odata/v2",
                            "username": "",
                            "password": ""
                        }
                    }
                }
            },
            "ECTimeOff": {
                "kind": "odata-v2",
                "model": "srv/external/ECTimeOff",
                "credentials": {
                    "[production]": {
                        "destination": "extensionapplication-sf-api",
                        "path": "odata/v2"
                    },
                    "[development]": {
                        "url": "",
                        "authentication": "BasicAuthentication",
                        "path": "odata/v2",
                        "username": "",
                        "password": ""
                    }
                }
            }
        }
    }
}
